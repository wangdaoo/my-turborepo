{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Build Lib",
    "extends": "./base.json",
    "compilerOptions": {
        "sourceMap": true,
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "lib": ["es2017", "DOM"],
        "strict": true,
        "esModuleInterop": false,
        "allowJs": true,
        "noImplicitAny": true
    }
}
